<Page
    x:Class="CryptocurrencyApp.View.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="HomePage"
    Width="600"
    Height="600"
    Background="#292929"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:TitleBar Title="CryptocurrencyApp" FontWeight="Bold" />

        <StackPanel Margin="0,40,0,0">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Name:" />
            <TextBlock
                Name="Name"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.Name}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Supply:" />
            <TextBlock
                Name="Supply"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.Supply}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Max Supply:" />
            <TextBlock
                Name="MaxSupply"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.MaxSupply}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Market Cap (USD):" />
            <TextBlock
                Name="MarketCapUsd"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.MarketCapUsd}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Volume (24 Hr USD):" />
            <TextBlock
                Name="VolumeUsd24Hr"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.VolumeUsd24Hr}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Price (USD):" />
            <TextBlock
                Name="PriceUsd"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.PriceUsd}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Change Percent (24 Hr):" />
            <TextBlock
                Name="ChangePercent24Hr"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.ChangePercent24Hr}" />

            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="VWAP (24 Hr):" />
            <TextBlock
                Name="Vwap24Hr"
                Margin="0,0,0,10"
                FontSize="14"
                Text="{Binding CryptoDataDetail.Vwap24Hr}" />
        </StackPanel>

    </Grid>
</Page>
